<!DOCTYPE html>
<html ng-app="seminarios" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="{{ asset('favicon.ico') }}">

    <title>{% block title %}Seminarios CCM-UNAM{% endblock %}</title>

    {% block css %}
        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

        <!-- Custom styles for this template -->
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/seminario/css/starter-template.css') }}" />
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        <link rel="stylesheet" href="//select2.github.io/select2/select2-3.5.2/select2.css">
        <link rel="stylesheet" href="{{ asset('bundles/seminario/css/select2-bootstrap.css')}}" type="text/css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

        <link rel="stylesheet" href="//cdn.datatables.net/1.10.6/css/jquery.dataTables.min.css">
        <link rel="stylesheet" href="{{ asset('bundles/seminario/css/signin.css')}}" type="text/css">
    {% endblock %}

</head>
<style type="text/css">
    body {
        font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
        font-size: 14px;
        line-height: 1.42857;
        color: #333;
        background-color: #FFF;
    }

</style>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">

    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('seminario') }}">Seminario & Coloquios</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ path('seminario') }}"><i class="fa fa-home fa-fw"></i>&nbsp;Inicio</a></li>
                <li><a href="{{ path('seminario') }}"><i class="fa fa-book"></i>&nbsp;Seminarios</a></li>
                <li><a href="{{ path('evento') }}"><i class="fa fa-calendar"></i>&nbsp;Eventos</a></li>
                {% if app.user and is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('responsable') }}"><i class="fa fa-users"></i>&nbsp;Responsables</a></li>
                {% endif %}
                {#<li><a href="#about">About</a></li>
                <li><a href="#contact">Contact</a></li>#}
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ path('logout') }}"><i class="fa fa-unlock"></i>&nbsp;Logout</a></li>
                    <li><a><i class="glyphicon glyphicon-user"></i>&nbsp;{{ app.user.username }}</a></li>
                {% endif %}
                {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ path('login_route') }}"><i class="fa fa-lock"></i>&nbsp;Login</a></li>
                {% endif %}

            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container">

    {% block body %}
    {% endblock %}

    {% block js %}
        <!-- Bootstrap core JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
        <script src="//select2.github.io/select2/select2-3.4.2/select2.js"></script>
        <script type="text/javascript">
            $('.select2').select2();
        </script>
        <script src="//cdn.datatables.net/1.10.6/js/jquery.dataTables.min.js"></script>
        <script>
            $(document).ready(function(){
                $('#myTable').DataTable();
            });
        </script>


    {% endblock %}
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script> -->
</body>
</html>