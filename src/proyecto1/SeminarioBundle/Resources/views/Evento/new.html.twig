{% extends 'SeminarioBundle::layout.html.twig' %}
{% block body -%}
<br>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        {#<h1 align="center">{{ entity.seminario.nombre }}</h1>#}
        <h1></h1>

        {{ form_start(form) }}
        {{ form_errors(form) }}

        <fieldset>
            <legend><i class="fa fa-calendar"></i>  Datos de Evento</legend>
            <h2>{{ entity.seminario.nombre }}</h2>
            <br>

            <div class="form-group">

                {{ form_label(form.seminario,'Seminario:') }}
                {{ form_errors(form.seminario) }}
                {{ form_widget(form.seminario,{'attr':{'class':'form-control'}}) }}

            </div>

            <div class="form-group">

                {{ form_label(form.lugar,'Lugar:') }}
                {{ form_errors(form.lugar) }}
                {{ form_widget(form.lugar,{'attr':{'class':'form-control'}}) }}

            </div>

            <div class="form-group">
                {{ form_label(form.fecha,'Fecha:') }}
                {{ form_errors(form.fecha) }}
                {# {{ form_widget(form.fecha) }} #}
                <div ng-controller="DatepickerCtrl" class="row">
                    <div class="col-md-6">
                        <p class="input-group">
                            <input type="date" id="proyecto1_seminariobundle_evento_fecha" name="proyecto1_seminariobundle_evento[fecha]" required="required" class="form-control" datepicker-popup="dd-MM-yyyy" ng-model="dt" is-open="opened" min-date="'01-01-2016'" max-date="'2017-06-22'" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
                              <span class="input-group-btn">
                                <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                              </span>
                        </p>
                    </div>
                    {% do form.fecha.setRendered %}
                </div>
            </div>
            <div class="form-group">

                {{ form_label(form.hora,'Hora:') }}
                {{ form_errors(form.hora) }}
                {{ form_widget(form.hora) }}

            </div>
            {#<div class="form-group">#}
                {#{{ form_label(form.hora,'Hora:') }}#}
                {#{{ form_errors(form.hora) }}#}
            {#<div ng-controller="TimepickerDemoCtrl">#}

                {#<timepicker ng-model="mytime" ng-change="changed()" hour-step="hstep" minute-step="mstep" show-meridian="ismeridian"></timepicker>#}

            {#</div>#}
                {#{% do form.fecha.setRendered %}#}
            {#</div>#}

            <div class="form-group">

                {{ form_label(form.ponente,'Ponente:') }}
                {{ form_errors(form.ponente) }}
                {{ form_widget(form.ponente,{'attr':{'class':'form-control','placeholder':'Nombre de Ponente'}}) }}

            </div>
            <div class="form-group">

                {{ form_label(form.origen,'Origen:') }}
                {{ form_errors(form.origen) }}
                {{ form_widget(form.origen,{'attr':{'class':'form-control','placeholder':'Origen ponente'}}) }}

            </div>
            <div class="form-group">

                {{ form_label(form.platica,'Platica:') }}
                {{ form_errors(form.platica) }}
                {{ form_widget(form.platica,{'attr':{'class':'form-control','placeholder':'Platica o tema'}}) }}

            </div>
            <div class="form-group">

                {{ form_label(form.resumen,'Resumen:') }}
                {{ form_errors(form.resumen) }}
                {{ form_widget(form.resumen,{'attr':{'class':'form-control','placeholder':'No requerido: Breve resumen'}}) }}

            </div>
            <div class="form-group">

                {{ form_label(form.coment,'Comentario:') }}
                {{ form_errors(form.coment) }}
                {{ form_widget(form.coment,{'attr':{'class':'form-control','placeholder':'No requerido: Comentario'}}) }}

            </div>
            <br>
        </fieldset>

        <p class="text-right">

            {{ form_widget(form.submit) }}
        </p>
        {{ form_end(form) }}

        {#<a class="btn btn-default" href="{{ path('evento') }}">Ver seminarios</a>#}
        {% endblock %}

        {% block js %}

        {{ parent() }}
        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.10/angular.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-i18n/1.2.15/angular-locale_es-mx.js"></script>
        <script src="{{ asset('bundles/seminario/js/ui-bootstrap-tpls-0.12.1.min.js') }}"></script>
        <script src="{{ asset('bundles/seminario/js/datepicker.js') }}" ></script>
        <script src="{{ asset('bundles/seminario/js/timepicker.js') }}" ></script>

{% endblock %}