<!DOCTYPE html PUBLIC "-//w3c//dtd html 4.0 transitional//en">
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">

    <meta name="GENERATOR" content="Mozilla/4.76 [en] (X11; U; Linux 2.4.2-2 i686) [Netscape]">
    <title>Centro de Ciencias Matem&aacute;ticas Unidad Morelia UNAM:
        Seminarios</title>

    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/seminario/css/matmor.css') }}" />

</head>


<body>

<p class="text-center">Semana del <strong>{{ "this week"|localizeddate('none', 'none', 'es-MX', null, "d 'de' MMMM") }} al {{ "this week"|date_modify("+4 day")|localizeddate('none', 'none', 'es-MX', null, "d 'de' MMMM y") }}</strong></p>
<br>

{% for entity in entities %}

    <p class="text-center"><strong>{{ entity.seminario }}</strong><br>
    Responsables: {{ entity.responsables }}</p>

    <table class="text-center" style="font-size: small; border: 1px solid rgb(204,204,204);width: 80%;" align="center">
        <tr style="background-color: #f3f3f3">
            <td style="padding: .2cm; width: 80%;">
                <strong>{{ entity.platica }}</strong>
            </td>
        </tr>
        <tr>
            <td style="border: 1px solid rgb(204,204,204);width: 80%;">
                {{ entity.ponente }}</strong> <br>{{ entity.origen }}
            </td>
        </tr>
        <tr>
            <td class="text-center" style="font-size: 11pt; border: 1px solid rgb(204,204,204);width: 80%;">
                <strong>{{ entity.fecha|localizeddate('none', 'none',  'es-MX', null, "EEEE dd") }}, {{ entity.hora|date('H:i') }} horas</strong><br>
                {{ entity.lugar }}
            </td>
        </tr>
        <tr>
            <td class="text-left" style="padding: .5cm; font-size: 10pt; border: 1px solid rgb(204,204,204);width: 80%;">
                {{ entity.resumen }}
                <br>
            </td>
        </tr>
    </table>
    <br><br>

{% endfor %}

</body>
</html>
